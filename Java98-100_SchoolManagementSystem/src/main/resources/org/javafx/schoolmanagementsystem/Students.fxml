<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/9.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.javafx.schoolmanagementsystem.controllers.StudentsController"
            prefHeight="600.0" prefWidth="950.0">

    <Pane prefHeight="100.0" prefWidth="950.0" style="-fx-background-color: #2D75E8;">
        <children>
            <Label layoutX="20.0" layoutY="20.0" text="Students" textFill="WHITE">
                <font>
                    <Font size="36.0"/>
                </font>
            </Label>
        </children>
    </Pane>

    <TableView fx:id="tbData" layoutX="20.0" layoutY="120.0" prefHeight="400.0" prefWidth="900.0">
        <columns>
            <TableColumn fx:id="studentId" text="Student ID" prefWidth="100"/>
            <TableColumn fx:id="firstName" text="First Name" prefWidth="200"/>
            <TableColumn fx:id="lastName" text="Last Name" prefWidth="200"/>
        </columns>
    </TableView>
</AnchorPane>
