<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns="http://javafx.com/javafx/9.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.javafx.schoolmanagementsystem.controllers.DashboardController"
            prefHeight="600.0" prefWidth="950.0">

    <Pane prefHeight="100.0" prefWidth="950.0" style="-fx-background-color: #2D75E8;">
        <children>
            <Label layoutX="20.0" layoutY="20.0" text="Dashboard" textFill="WHITE">
                <font>
                    <Font size="36.0"/>
                </font>
            </Label>
        </children>
    </Pane>

    <GridPane layoutX="20.0" layoutY="120.0" hgap="10.0">
        <children>
            <TableView fx:id="tbData" prefHeight="300.0" prefWidth="600.0">
                <columns>
                    <TableColumn fx:id="studentId" text="Student ID" prefWidth="100"/>
                    <TableColumn fx:id="firstName" text="First Name" prefWidth="200"/>
                    <TableColumn fx:id="lastName" text="Last Name" prefWidth="200"/>
                </columns>
            </TableView>

            <PieChart fx:id="pieChart" layoutX="620.0" prefHeight="300.0" prefWidth="300.0"/>
        </children>
    </GridPane>
</AnchorPane>
